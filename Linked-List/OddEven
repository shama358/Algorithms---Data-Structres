/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
public class OddEven {
    public ListNode oddEvenList(ListNode head) {
        if (head == null || head.next == null) {   //Early termination if the list has just 1 or 0 nodes.
            return head;
        }
        ListNode odd = head, eve = head.next;     //odd node has all odd nodes, eve = eve nodes.
        while (eve != null && eve.next != null) {  //re-ordering the list so that all odd nodes are together and all even nodes are together
            ListNode oddNext = eve.next;
            eve.next = oddNext.next;
            oddNext.next = odd.next;
            odd.next = oddNext;
            eve = eve.next;
            odd = oddNext;
        }
        return head;
    }
}
